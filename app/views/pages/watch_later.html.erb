<h1>Watch Later Forms</h1>

<div class="container add_later">
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6 form_container">
        <h2 style="margin-top: 10px;">Add New Content</h2>
        <%= form_with model: @film, local: true do |form| %>
        <ul class="later_form">
            <li>
            <%= form.label :title, style: "text-align: left" %>
            <%= form.text_field :title %>
            </li>

            <li>
            <%= form.label :type, "Content Type:", style: "text-align: left;" %>
            <%= form.select :type, options_for_select([['Movie', 'movie'], ['YouTube', 'youtube'], ['Video', 'video']], @film.type) %>
            </li>
        </ul>
        <% end %>
    </div>
    <div class="col-md-3">
    </div>
  </div>
</div>
